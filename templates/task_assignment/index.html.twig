{% extends 'base.html.twig' %}

{% block title %}Task Assignment
{% endblock %}

{% block body %}
	<div class="card mt-5">
		<div class="card-header">
			Task Assignment
		</div>
		<div class="card-body">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>ID</th>
						<th>Task</th>
						<th>User Name</th>
						<th>Created Time</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for task_assignment in task_assignments %}
						<tr>
							<td>{{ task_assignment.id }}</td>
							<td>{{ task_assignment.getTaskId.getTitle }}</td>
							<td>{{ task_assignment.getUserId.getName }}</td>
							<td>{{ task_assignment.createdAt ? task_assignment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>

								<div class="">
									<a href="{{ path('app_task_assignment_edit', {'id': task_assignment.id}) }}" class="btn btn-sm btn-edit">
										<i class="fa fa-edit"></i>
									</a>
									<a href="{{ path('app_task_assignment_show', {'id': task_assignment.id}) }}" class="btn btn-sm btn-show">
										<i class="fa fa-info-circle"></i>
									</a>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('app_task_assignment_new') }}" class="btn btn-primary">Create New</a>
		</div>
	</div>
{% endblock %}

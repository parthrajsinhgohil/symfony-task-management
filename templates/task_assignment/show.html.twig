{% extends 'base.html.twig' %}

{% block title %}TaskAssignment
{% endblock %}

{% block body %}
	<div class="card mt-5">
		<div class="card-header">
			Task Assignment
			<div style="float: right;" class="d-flex">
				{{ include('task_assignment/_delete_form.html.twig') }}
				<a href="{{ path('app_task_assignment_edit', {'id': task_assignment.id}) }}" class="btn btn-sm btn-primary" style="margin-left: 10px;">
					<i class="fa fa-edit"></i>
				</a>
				<a href="{{ path('app_task_assignment_index') }}" class="btn btn-sm btn-warning" style="margin-left: 10px;color:white;">back to list</a>
			</div>
		</div>
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>ID</th>
						<td>{{ task_assignment.id }}</td>
					</tr>
					<tr>
						<th>Task</th>
						<td>{{ task_assignment.getTask.getTitle }}</td>
					</tr>
					<tr>
						<th>User Name</th>
						<td>{{ task_assignment.getUser.getName }}</td>
					</tr>
					<tr>
						<th>Created Time</th>
						<td>{{ task_assignment.createdAt ? task_assignment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
